# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=eventoando-prod

# Environment
ENVIRONMENT=prod
PROJECT_NAME=eventoando

# Frontend Configuration
FLUTTER_WEB_PORT=8000
FLUTTER_WEB_HOSTNAME=0.0.0.0

# API Configuration
API_URL=https://api.eventoando.com
API_VERSION=v1

# Database Configuration
DB_HOST=eventoando-prod.cluster-xxxxx.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=eventoando
DB_USERNAME=admin
DB_PASSWORD=prod_password_change_me_and_use_secrets_manager

# DynamoDB Tables
EVENTS_TABLE=eventoando-events-prod
COUPONS_TABLE=eventoando-coupons-prod

# S3 Buckets
FRONTEND_BUCKET=eventoando-frontend-prod
COUPONS_BUCKET=eventoando-coupons-prod

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=XXXXXXXXXX

# EventBridge
EVENT_BUS_NAME=eventoando-prod

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false
ENABLE_ACCESS_LOGGING=true

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_PERFORMANCE_MONITORING=true

# Cache Configuration
CACHE_TTL=7200
ENABLE_REDIS_CACHE=true

# Security
JWT_SECRET=prod_jwt_secret_change_me_and_use_secrets_manager
ENABLE_SSL=true
CORS_ALLOWED_ORIGINS=https://eventoando.com,https://www.eventoando.com

# Monitoring
ENABLE_CLOUDWATCH_METRICS=true
ENABLE_XRAY_TRACING=true

# Rate Limiting
API_RATE_LIMIT=50
API_RATE_LIMIT_WINDOW=60

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
NOTIFICATION_FROM_EMAIL=noreply@eventoando.com

# Integration Settings
PAYMENT_GATEWAY_URL=https://payment.example.com
PAYMENT_GATEWAY_API_KEY=prod_key_change_me_and_use_secrets_manager

# Performance
LAMBDA_MEMORY_SIZE=256
LAMBDA_TIMEOUT=30
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=5

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30

# Development Tools
ENABLE_SWAGGER_UI=false
ENABLE_GRAPHIQL=false

# Production Specific Settings
ENABLE_CDN_CACHING=true
CDN_CACHE_TTL=86400
ENABLE_WAF=true
ENABLE_SHIELD=true
ENABLE_DDOS_PROTECTION=true

# High Availability Settings
MULTI_AZ_DEPLOYMENT=true
READ_REPLICA_ENABLED=true
AUTO_SCALING_ENABLED=true

# Compliance and Security
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true
ENABLE_IAM_AUTH=true

# Error Reporting
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
ENABLE_ERROR_REPORTING=true
ERROR_NOTIFICATION_EMAIL=alerts@eventoando.com

# Performance Monitoring
ENABLE_APM=true
APM_SAMPLING_RATE=0.1

# Database Optimization
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_IDLE_TIMEOUT=300

# Content Delivery
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

# Business Logic
PAYMENT_RETRY_ATTEMPTS=3
ORDER_EXPIRATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# Geographic Distribution
ENABLE_GLOBAL_TABLES=true
ENABLE_GLOBAL_ACCELERATOR=true

# Disaster Recovery
DR_BACKUP_REGION=us-west-2
ENABLE_CROSS_REGION_BACKUP=true
RPO_MINUTES=15
RTO_MINUTES=60