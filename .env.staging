# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=eventoando-staging

# Environment
ENVIRONMENT=staging
PROJECT_NAME=eventoando

# Frontend Configuration
FLUTTER_WEB_PORT=8000
FLUTTER_WEB_HOSTNAME=0.0.0.0

# API Configuration
API_URL=https://api-staging.eventoando.com
API_VERSION=v1

# Database Configuration
DB_HOST=eventoando-staging.cluster-xxxxx.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=eventoando
DB_USERNAME=admin
DB_PASSWORD=staging_password_change_me_and_use_secrets_manager

# DynamoDB Tables
EVENTS_TABLE=eventoando-events-staging
COUPONS_TABLE=eventoando-coupons-staging

# S3 Buckets
FRONTEND_BUCKET=eventoando-frontend-staging
COUPONS_BUCKET=eventoando-coupons-staging

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=XXXXXXXXXX

# EventBridge
EVENT_BUS_NAME=eventoando-staging

# Logging
LOG_LEVEL=debug
ENABLE_DEBUG_LOGGING=true
ENABLE_ACCESS_LOGGING=true

# Feature Flags
ENABLE_BETA_FEATURES=true
ENABLE_PERFORMANCE_MONITORING=true

# Cache Configuration
CACHE_TTL=3600
ENABLE_REDIS_CACHE=true

# Security
JWT_SECRET=staging_jwt_secret_change_me_and_use_secrets_manager
ENABLE_SSL=true
CORS_ALLOWED_ORIGINS=https://staging.eventoando.com

# Monitoring
ENABLE_CLOUDWATCH_METRICS=true
ENABLE_XRAY_TRACING=true

# Rate Limiting
API_RATE_LIMIT=75
API_RATE_LIMIT_WINDOW=60

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
NOTIFICATION_FROM_EMAIL=noreply@staging.eventoando.com

# Integration Settings
PAYMENT_GATEWAY_URL=https://payment-staging.example.com
PAYMENT_GATEWAY_API_KEY=staging_key_change_me_and_use_secrets_manager

# Performance
LAMBDA_MEMORY_SIZE=192
LAMBDA_TIMEOUT=30
DB_MAX_CONNECTIONS=25
DB_CONNECTION_TIMEOUT=5

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=14

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_GRAPHIQL=true

# Staging Specific Settings
ENABLE_CDN_CACHING=true
CDN_CACHE_TTL=3600
ENABLE_WAF=true
ENABLE_SHIELD=false
ENABLE_DDOS_PROTECTION=true

# High Availability Settings
MULTI_AZ_DEPLOYMENT=false
READ_REPLICA_ENABLED=false
AUTO_SCALING_ENABLED=true

# Compliance and Security
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true
ENABLE_IAM_AUTH=true

# Error Reporting
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
ENABLE_ERROR_REPORTING=true
ERROR_NOTIFICATION_EMAIL=staging-alerts@eventoando.com

# Performance Monitoring
ENABLE_APM=true
APM_SAMPLING_RATE=0.5

# Database Optimization
DB_POOL_MIN=5
DB_POOL_MAX=25
DB_IDLE_TIMEOUT=300

# Content Delivery
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

# Business Logic
PAYMENT_RETRY_ATTEMPTS=3
ORDER_EXPIRATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# Testing Configuration
ENABLE_E2E_TESTING=true
ENABLE_LOAD_TESTING=true
ENABLE_CHAOS_TESTING=true
TEST_DATA_RETENTION_DAYS=7

# Feature Testing
ENABLE_A_B_TESTING=true
ENABLE_FEATURE_TOGGLES=true
ENABLE_CANARY_RELEASES=true

# Monitoring and Alerts
ALERT_NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/xxxxx/xxxxx/xxxxx
ENABLE_PERFORMANCE_ALERTS=true
ENABLE_ERROR_RATE_ALERTS=true
ENABLE_COST_ALERTS=true

# Staging Environment Limits
MAX_CONCURRENT_USERS=1000
MAX_REQUESTS_PER_SECOND=500
MAX_FILE_UPLOAD_SIZE=10485760 # 10MB

# Integration Testing
ENABLE_MOCK_INTEGRATIONS=false
ENABLE_SANDBOX_INTEGRATIONS=true
INTEGRATION_TEST_MODE=true